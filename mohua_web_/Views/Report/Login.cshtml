@model mohua_web_.Models.LoginModel
@{
    ViewData["Title"] = " Home";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="../assets/img/favicon.png">
    <title>
        MOHUA :: DSU
    </title>
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900|Roboto+Slab:400,700" />
    <!-- Nucleo Icons -->
    <link href="../assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="../assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
    <!-- CSS Files -->
    <link id="pagestyle" href="../assets/css/material-dashboard.css?v=3.0.4" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body class="bg-gray-200">

    <main class="main-content  mt-0">
        <video autoplay muted loop id="myVideo">
            <source src="../img/vid-20250120-wa0036.mp4" type="video/mp4">
        </video>
		
        <div class="page-header align-items-start loginpage" style="">
			<span class="mask bg-gradient-dark opacity-6"></span>
            <div class="container my-auto">
                <div class="row m-0">
                    <div class="col-lg-5 col-md-5 col-12 loginform">
                        <div class="card w-75">
                            <div class="p-0 position-relative">
                                <div class="">
                                    <img src="../admincss/images/loginlogo.png" class="logos" />
                                    <p class="text-white text-center mt-2 mb-0">Data Strategy Unit (DSU)</p>
                                    <div class="row mt-3">
                                        <div class="col-12 text-center ms-auto">

                                            <h4 class="text-warning m-0 ">Sign in</h4>
                                         
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body p-0">
                                @if (TempData["AlertMessage"] != null)
                                {
                                    <div class="alert alert-danger alert-dismissible">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                        <h5><i class="icon fas fa-ban"></i> Alert!</h5>
                                        @TempData["AlertMessage"]
                                    </div>
                                }

                                <form asp-action="Login" role="form" class="text-start">
                                    <div class="input-group input-group-outline my-3">
                                        <input type="text" class="form-control" asp-for="@Model.UserName" placeholder="User Name">
                                    </div>
                                    <div class="input-group input-group-outline mb-3">
                                        <input type="password" class="form-control" asp-for="@Model.Password" placeholder="Password">
                                    </div>

                                    <div class="text-center">
                                        <button type="submit" class="btn btn-warning w-100 mt-3 mb-2">Sign in</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
					
                <div class="col-12 col-lg-7 col-md-7 login-right">
                        <img src="../admincss/images/loginleftimg.png" />
                </div>
            </div>
            @* <footer class="footer position-absolute bottom-2 py-2 w-100"> *@
            @*     <div class="container"> *@
            @*         <div class="row align-items-center justify-content-lg-between"> *@
            @*             <div class="col-12 col-md-6 my-auto"> *@
            @*                 <div class="copyright text-center text-sm text-white text-lg-start"> *@
            @*                     © <script> *@
            @*                            document.write(new Date().getFullYear()) *@
            @*                     </script>, *@
            @*                    <i class="fa fa-heart" aria-hidden="true"></i>  *@
            @*                     <a href="#" class="font-weight-bold text-white" target="_blank">V 1.0 All Rights Reserved MOHUA::DSU</a> *@
            @*                 </div> *@
            @*             </div> *@
                       
            @*         </div> *@
            @*     </div> *@
            @* </footer> *@
        </div>
       </div>
    
 
    </main>



    <!--   Core JS Files   -->
    <script src="../assets/js/core/popper.min.js"></script>
    <script src="../assets/js/core/bootstrap.min.js"></script>
    <script src="../assets/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="../assets/js/plugins/smooth-scrollbar.min.js"></script>
    <script>
        var win = navigator.platform.indexOf('Win') > -1;
        if (win && document.querySelector('#sidenav-scrollbar')) {
            var options = {
                damping: '0.5'
            }
            Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
        }
    </script>
    <!-- Github buttons -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <!-- Control Center for Material Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="../assets/js/material-dashboard.min.js?v=3.0.4"></script>
</body>

</html>